@model SFA.DAS.ProviderRequestApprenticeTraining.Web.Models.Error.Error403ViewModel
@{
    ViewData["Title"] = "You need a different service role to view this page";
    ViewBag.GaData.Vpv = "/error/403";
}

<div class="govuk-grid-row">
    <div class="govuk-grid-column-two-thirds">
        <div class="hgroup">
            <h1 class="govuk-heading-xl">
                @ViewData["Title"]
            </h1>
        </div>
        <div class="inner">
            <p>
                To continue, you’ll need to get your role for this service changed.
            </p>
            <p>
                You can ask for a higher role by <a href="@Model.RoleRequestHelpLink" target="_blank" rel="noopener noreferrer">requesting access to a service in your DfE Sign-in account</a>. Select Apprenticeship service for training providers, and then request a higher role at the next step.
            </p>
            <p>
                The DfE Sign-in approver inside your organisation will need to approve your request.
            </p>
            <p>
                If you came here by mistake, go back to the <a href="@Model.DashboardLink">homepage of this service.</a>
            </p>
        </div>
    </div>
</div>
